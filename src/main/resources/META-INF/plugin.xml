<idea-plugin>
    <id>dev.michaelbergmann.dsfintellij</id>
    <name>DSF Highlighter</name>
    <vendor email="michael.15@gmx.de" url="https://github.com/MichaelB1337">Michael Bergmann</vendor>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File type -->
        <fileType
                name="DSF File"
                extensions="dsf"
                language="DSF"
                implementationClass="dev.michaelbergmann.dsfintellij.DsfFileType"/>

        <!-- Minimal parser definition to make DSF a real language in the PSI -->
        <lang.parserDefinition
                language="DSF"
                implementationClass="dev.michaelbergmann.dsfintellij.DsfParserDefinition"/>

        <!-- Syntax highlighter -->
        <lang.syntaxHighlighterFactory
                language="DSF"
                implementationClass="dev.michaelbergmann.dsfintellij.DsfSyntaxHighlighterFactory"/>
        <lang.foldingBuilder
                language="DSF"
                implementationClass="dev.michaelbergmann.dsfintellij.DsfFoldingBuilder"/>
    </extensions>
</idea-plugin>