<idea-plugin>
    <id>com.example.dsfintellij</id>
    <name>DSF Syntax Highlighting</name>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File type -->
        <fileType
                name="DSF File"
                extensions="dsf"
                language="DSF"
                implementationClass="com.example.dsfintellij.DsfFileType"/>

        <!-- Minimal parser definition to make DSF a real language in the PSI -->
        <lang.parserDefinition
                language="DSF"
                implementationClass="com.example.dsfintellij.DsfParserDefinition"/>

        <!-- Syntax highlighter -->
        <lang.syntaxHighlighterFactory
                language="DSF"
                implementationClass="com.example.dsfintellij.DsfSyntaxHighlighterFactory"/>
    </extensions>
</idea-plugin>